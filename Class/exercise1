// Criação de uma classe básica

// Classe: Empregados da Firma JP

class Empregados_JP
{
    String nome;
    long id;
    double salario;
};

public class Main
{
    public static void main(String [] args)
    {
        Empregados_JP emp1 = new Empregados_JP();
        Empregados_JP emp2 = new Empregados_JP();

        emp1.nome = "Rita Marques";
        emp1.id = 30;

        emp2.nome = "Rui Silva";
        emp2.id = 3000;

        System.out.println("Nome do Empregado 1: " + emp1.nome);
        System.out.println("Id do Empregado 1: " + emp1.id);

        System.out.println("Nome do Empregado 2: " + emp2.nome);
        System.out.println("Id do Empregado 2: " + emp2.id);
    }
}
